<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    DEFAULT COLORS YOU CAN OVERRIDE IN YOUR APP-->
    <style name="NewCheckoutTheme" parent="Theme.Checkout.Light">
        <item name="headerBackground">#FF00122D</item>
        <item name="fontFamily">@font/pingregular</item>
        <item name="cancelButtonTintColor">@color/cancelButtonTintColor</item>
        <item name="listMarkTintColor">@color/listMarkTintColor</item>
        <item name="cameraTintColor">@color/cameraTintColor</item>
        <item name="checkboxButtonTintColor">@color/checkboxButtonTintColor</item>
        <item name="checkoutButtonStyle">@style/NewCheckoutTheme.Button</item>
        <item name="checkoutProgressBarStyle">@style/NewCheckoutTheme.checkoutProgressBarStyle</item>
        <item name="checkoutEditTextStyle">@style/NewCheckoutTheme.EditText</item>
        <item name="checkoutHelperTextViewStyle">@style/NewCheckoutTheme.HelperTextView</item>
    </style>

    <!-- EditText Style -->
    <style name="NewCheckoutTheme.EditText" parent="Checkout.EditText">
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">#FF00004E</item>
    </style>

    <!-- Custom style for Helper TextView -->
    <style name="NewCheckoutTheme.HelperTextView" parent="Checkout.TextView">
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewCheckoutTheme.Button" parent="Checkout.Button.Light">
        <item name="android:background">@color/buttonBackgroundColor</item>
        <item name="android:text">Save Card</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF00004E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="NewCheckoutTheme.checkoutProgressBarStyle" parent="Checkout.Progress">
        <item name="android:indeterminateTint">@color/headerBackground</item>
    </style>

    <!--    DEFAULT COLORS YOU CAN OVERRIDE IN YOUR APP-->
    <color name="checkoutProgressBarStyle">#214282</color>
    <color name="headerBackground">#214282</color>
    <color name="cancelButtonTintColor">#FFFFFF</color>
    <color name="listMarkTintColor">#214282</color>
    <color name="cameraTintColor">#214282</color>
    <color name="checkboxButtonTintColor">#214282</color>
    <color name="buttonBackgroundColor">#FF00BF00</color>
    <color name="checkout_color_accent">#FF00004E</color>
</resources>
